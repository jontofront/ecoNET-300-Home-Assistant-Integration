{
  // Home Assistant Development Guidelines Configuration
  // Based on: https://developers.home-assistant.io/docs/development_guidelines

  // Python Configuration
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": true,
  "python.formatting.provider": "none",

  // Ruff Configuration (replaces black, isort, flake8)
  "python.linting.ruffEnabled": true,
  "python.linting.ruffPath": "./venv/bin/ruff",
  "python.linting.ruffArgs": ["--fix", "--exit-non-zero-on-fix"],

  // Editor Settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [88],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,

  // File Associations
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "*.json": "json",
    "*.toml": "toml"
  },

  // YAML Configuration
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,
  "yaml.format.proseWrap": "preserve",

  // JSON Configuration
  "json.format.enable": true,
  "json.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,

  // Python Specific
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,

  // Testing Configuration
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,

  // Pre-commit Integration
  "pre-commit.installOnSave": true,
  "pre-commit.runOnSave": true,

  // Code Style Enforcement
  "python.linting.maxNumberOfProblems": 1000,
  "python.analysis.diagnosticMode": "workspace",

  // Import Organization
  "python.sortImports.args": ["--profile", "black", "--line-length", "88"],

  // Documentation
  "python.analysis.completeFunctionParens": true,
  "python.analysis.include": ["custom_components/**/*.py", "tests/**/*.py"],
  "cursorpyright.analysis.autoImportCompletions": true,
  "cursorpyright.analysis.autoSearchPaths": true,
  "cursorpyright.analysis.diagnosticMode": "workspace",
  "cursorpyright.analysis.include": [
    "custom_components/**/*.py",
    "tests/**/*.py"
  ],
  "cursorpyright.analysis.typeCheckingMode": "basic",
  "cSpell.words": [
    "asyncio",
    "bufor",
    "clientsession",
    "codeowners",
    "codespell",
    "consum",
    "Docstrings",
    "ECOMAX",
    "econet",
    "ecosol",
    "ecosrv",
    "ecoster",
    "editability",
    "hass",
    "homeassistant",
    "homekit",
    "isort",
    "jontofront",
    "kowity",
    "lamda",
    "maxv",
    "MILLIWATT",
    "minv",
    "mult",
    "mypy",
    "pathlib",
    "pblxpt",
    "pyproject",
    "RMNEWPARAM",
    "sched",
    "setpoint",
    "setpoints",
    "ssdp",
    "stdlib",
    "tzcwu",
    "uzysk",
    "wlan",
    "wthr",
    "zeroconf"
],
  "cSpell.ignorePaths": [
    "custom_components/econet300/translations/pl.json",
    "pyproject.toml",
    "tests/**",
    ".codespellrc"
  ]
}
